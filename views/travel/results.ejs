<%include partials/header%>
<div class="media">
            <div class="row js-masonry" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": ".grid-sizer", "percentPosition": true }'>
              <div class="grid-sizer col-md-6 col-sm-6"></div>

              <form action="/home" method="POST" id="favorite">
                <% _.forEach(chunks, function(val) {  %>
                    <% _.forEach(val, function(val2) {  %>
              <div class="grid-item col-md-6 col-sm-6">
                <div class="media-grid">
                  <div class="img-wrapper" data-toggle="modal" data-target=".modal-2">
                    <img src="/uploads/<%= val2.image %>" alt="" class="img-responsive post-image" />
                  </div>
                  <div class="media-info">
                    <div class="reaction">
                      <a class="btn text-green">
                        <input type="hidden" name="id" id="id" value="<%= val2._id %>">
                        <input type="hidden" name="gpName" id="gp_Name" value="<%= val2.name%>">
                        <i class="fa fa-thumbs-up"></i> <%= val2.fans.length %></a>
                      <a class="btn text-red">
                        <i class="fa fa-thumbs-down"></i> 0</a>
                      <a href="/group/<%= val2.name.replace(/ /g, "-") %>" class="btn text-red">
                        <i class="fa fa-user-circle"></i> Enter</a>
                    </div>
                    <div class="user-info">
                      <div class="user">
                        <h6>
                          <a href="/group/<%= val2.name.replace(/ /g, "-") %>" class="profile-link"><%= val2.name %></a>
                        </h6>
                        <a class="text-green" href="#"><%= val2.country %></a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
              <% }) %>
              </form>
            </div>
          </div>
        </div>